{
  "name": "webscripts",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && tsx scripts/build --pre && vite build && vite build --config vite.content.config.ts && tsx ./scripts/build.ts --post",
    "type-check": "tsc --project tsconfig.app.json --noEmit && tsc --project tsconfig.node.json --noEmit",
    "lint": "eslint",
    "check": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-preact": "^0.544.0",
    "monaco-editor": "^0.54.0",
    "monaco-themes": "^0.4.7",
    "preact": "^10.27.2",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/chrome": "^0.1.12",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  }
}
